<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.CommentsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_list_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_list_view1"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_alignParentBottom="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/insert_cmt_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/insert_cmt_cmt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="댓글 달기..."
            android:inputType="text"
            android:background="@drawable/commentbutton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시"
            android:id="@+id/insert_cmt_ok_button"
            android:background="@drawable/button_corner"/>

    </LinearLayout>
</RelativeLayout>