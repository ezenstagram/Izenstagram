<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.CommentsActivity">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_list_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
        </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-531dp"
        android:gravity="bottom"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/insert_cmt_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/insert_cmt_cmt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/commentbutton"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="  댓글 달기..."
            android:inputType="text"
            android:textSize="13dp"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/insert_cmt_ok_button"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="@drawable/button_corner"
            android:text="게시"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>
</RelativeLayout>